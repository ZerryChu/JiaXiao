<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="UTF-8" />

	<constant name="struts.objectFactory" value="spring" />

	<constant name="struts.objectFactory.spring.autoWire" value="type" />

	<!-- 当struts配置文件修改时是否自动加载 -->
	<constant name="struts.configuration.xmlreload" value="true" />

	<!-- 开发模式下打印详细的错误信息 -->
	<constant name="struts.devMode" value="true" />

	<constant name="struts.ui.theme" value="xhtml" />

	<package name="default" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="checkAuthority"
				class="group.zerry.jiaxiao.interceptors.CheckAuthority">
				<param name="excludeMethods">showInfo,showStudentInfo,showStudentById</param>				
			</interceptor>

			<!-- <interceptor-stack name="myStack"> <interceptor-ref name="defaultStack"></interceptor-ref> 
				<interceptor-ref name="method1"></interceptor-ref> <interceptor-ref name="test1"></interceptor-ref> 
				</interceptor-stack> -->
		</interceptors>
		<global-results>
			<result name="wrong">/error.jsp</result>
			<result name="error">/error.jsp</result>
		</global-results>
		<action name="user_*" class="group.zerry.jiaxiao.action.UserAction"
			method="{1}">
			<!-- <result name="re" type="redirectAction">user_queryAllUser.action</result> -->
			<result name="success">/index.jsp</result>
		</action>
		<action name="student_*" class="group.zerry.jiaxiao.action.StudentAction"
			method="{1}">
			 <!--  <interceptor-ref name="checkAuthority"/>-->
			<result name="success">/stu_info.jsp</result>			
			<!-- <result name="re" type="redirectAction">user_queryAllUser.action</result> -->
		</action>
		<action name="orderTest_*" class="group.zerry.jiaxiao.action.OrderTestAction"
			method="{1}">
			<interceptor-ref name="checkAuthority"/>
			<result name="success">/index.jsp</result>			
			<!-- <result name="re" type="redirectAction">user_queryAllUser.action</result> -->
		</action>
		<action name="orderCar_*" class="group.zerry.jiaxiao.action.OrderCarAction"
		    method="{1}">
			 <!--  <interceptor-ref name="checkAuthority"/>-->
			<result name="query_success">/car_plan.jsp</result>
			<result name="searchTime_success">/train_car.jsp</result>
			<result name="add_success">/car_plan.jsp</result>		
			<!-- <result name="re" type="redirectAction">user_queryAllUser.action</result> -->
		</action>
	</package>

</struts>    


